<div id="product-details" class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-3 col-lg-3">
      <h2 id="software-details-title">Product Detials</h2>
    </div>
    <div class="col-sm-6 col-md-3 col-lg-3">
      <h4 id="software-detials-inner-title">Platforms</h4>
      <div class="col-sm-12">
        <ul style="padding:0px !important;">
          <%- software.platforms %>
        </ul>
      </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3">
      <h4 id="software-detials-inner-title">Available Languages</h4>
      <div class="col-sm-12">
        <ul>
          <%- software.languages %>
        </ul>
      </div>
      <h4 id="software-detials-inner-title" style="margin-top:2rem !important;">Available Regions</h4>
      <div class="col-sm-12">
        <ul>
          <%- software.regions %>
        </ul>
      </div>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3">
      <h4 id="software-detials-inner-title">Product Requirements</h4>
      <div class="col-sm-12">
        <ul>
          <%- software.requirements %>
        </ul>
      </div>
    </div>
  </div>
</div>
