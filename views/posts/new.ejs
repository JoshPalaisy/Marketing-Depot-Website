<% include ../partials/header %>
<div class="container-fluid p-5" style="background: url(/images/checkout-bg.jpg) top center no-repeat;margin-top:-80px;">
  <div class="container p-5">
      <h1 class="text-center">New Post</h1>
      <form action="/news" method="POST" style="max-width: 800px !important;margin-left:auto !important;margin-right:auto !important;">
        <fieldset class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" name="post[title]" placeholder="Post Title">
        </fieldset>
        <fieldset class="form-group">
          <label for="postCategories">Post Category</label>
          <select class="form-control" name="post[category]" id="postCategories">
            <option value="News">News</option>
            <option value="Pro Builder">Pro Builder</option>
            <option value="Pro Leads">Pro Leads</option>
            <option value="WatchTower">WatchTower</option>
            <option value="MD Phones">MD Phones</option>
          </select>
        </fieldset>
        <div class="row">
          <div class="col-md-6">
            <fieldset class="form-group">
              <label>Author</label>
              <input class="form-control" type="text" name="post[author]" placeholder="Post Author" value="Marketing Depot">
            </fieldset>
          </div>
          <div class="col-md-6">
            <fieldset class="form-group">
              <label>Image</label>
              <input class="form-control" type="text" name="post[image]" placeholder="Featured Image (URL only)">
            </fieldset>
          </div>
        </div>
        <fieldset class="form=group">
          <label>Post Descripton</label>
          <textarea class="form-control new-post-description" name="post[description]" placeholder="SEO Post Description"></textarea></br>
        </fieldset>
        <fieldset class="form=group">
          <label>Post Content</label>
          <textarea class="form-control new-post-content-area" name="post[content]" placeholder="Insert plain text or HTML"></textarea></br>
        </fieldset>
          <input class="btn btn-primary btn-block p-3" type="submit" value="Publish">
      </form>
  </div>
</div>
<% include ../partials/main-footer %>
